<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <TextView
        android:id="@+id/txt_flightShow"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#00FFF266"
        android:gravity="center"
        android:text="@string/info"
        android:textColor="@color/dark_green"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_origin"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:background="#00FFF266"
        android:text="Origin"
        android:textColor="@color/dark_green"
        android:textColorHint="#9E9420"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_flightShow" />

    <TextView
        android:id="@+id/tv_destiny"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="36dp"
        android:background="#00FFF266"
        android:text="Destiny"
        android:textColor="@color/dark_green"
        android:textColorHint="#9E9420"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_origin" />

    <TextView
        android:id="@+id/tv_planeName"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="36dp"
        android:background="#00FFF266"
        android:text="Plane Name"
        android:textColor="@color/dark_green"
        android:textColorHint="#9E9420"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_destiny" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="36dp"
        android:background="#00FFF266"
        android:text="Duration"
        android:textColor="@color/dark_green"
        android:textColorHint="#9E9420"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_planeName" />

    <TextView
        android:id="@+id/tv_seatAmount"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="36dp"
        android:background="#00FFF266"
        android:text="Seat Amount"
        android:textColor="@color/dark_green"
        android:textColorHint="#9E9420"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_duration" />

    <TextView
        android:id="@+id/tv_seatPrice"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="36dp"
        android:background="#00FFF266"
        android:text="Seat price"
        android:textColor="@color/dark_green"
        android:textColorHint="#9E9420"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_seatAmount" />
</androidx.constraintlayout.widget.ConstraintLayout>