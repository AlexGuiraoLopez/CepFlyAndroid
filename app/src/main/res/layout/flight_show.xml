<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7246EB">

    <TextView
        android:id="@+id/txt_flightShow"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#FFF266"
        android:gravity="center"
        android:text="InformaciÃ³n del vuelo"
        android:textColor="#9E9420"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_origin"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:text="Origin"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_flightShow"
        android:background="#FFF266"
        android:textColorHint="#9E9420"/>

    <TextView
        android:id="@+id/tv_destiny"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:text="Destiny"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_origin"
        android:background="#FFF266"
        android:textColorHint="#9E9420"/>

    <TextView
        android:id="@+id/tv_planeName"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:text="Plane Name"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_destiny"
        android:background="#FFF266"
        android:textColorHint="#9E9420"/>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:text="Duration"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_planeName"
        android:background="#FFF266"
        android:textColorHint="#9E9420"/>

    <TextView
        android:id="@+id/tv_seatAmount"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:text="Seat Amount"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_duration"
        android:background="#FFF266"
        android:textColorHint="#9E9420"/>

    <TextView
        android:id="@+id/tv_seatPrice"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:text="Seat price"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_seatAmount"
        android:background="#FFF266"
        android:textColorHint="#9E9420"/>
</androidx.constraintlayout.widget.ConstraintLayout>