<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_selectEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Selecciona empleados"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pilot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Piloto"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_selectEmployee"
        tools:layout_editor_absoluteX="41dp" />

    <TextView
        android:id="@+id/tv_copilot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Copiloto"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pilot"
        tools:layout_editor_absoluteX="41dp" />

    <TextView
        android:id="@+id/tv_assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Asistente"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_copilot"
        tools:layout_editor_absoluteX="41dp" />

    <Button
        android:id="@+id/btn_addPilot"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="64dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/tv_pilotAmount"
        app:layout_constraintTop_toBottomOf="@+id/tv_selectEmployee" />

    <TextView
        android:id="@+id/tv_pilotAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="72dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btn_addPilot2"
        app:layout_constraintTop_toBottomOf="@+id/tv_selectEmployee" />

    <Button
        android:id="@+id/btn_addPilot2"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="64dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/tv_pilot"
        app:layout_constraintTop_toBottomOf="@+id/tv_selectEmployee" />

</androidx.constraintlayout.widget.ConstraintLayout>