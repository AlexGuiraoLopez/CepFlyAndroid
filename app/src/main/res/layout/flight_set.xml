<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"><![CDATA[

    />







    />













    ]]>

    <TextView
        android:id="@+id/txt_flightSet"
        android:layout_width="248dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:text="@string/set_flight"
        android:textColor="@color/dark_green"
        android:textColorHint="#9E9420"
        android:textColorLink="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#00DAD8C2"
        android:ems="10"
        android:hint="Origin"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="@color/dark_green"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_flightSet" />

    <EditText
        android:id="@+id/et_planeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#00FFF266"
        android:ems="10"
        android:hint="Plane name"
        android:inputType="textPersonName"
        android:textColorHint="@color/dark_green"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_destiny" />

    <EditText
        android:id="@+id/et_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#00FFF266"
        android:ems="10"
        android:hint="Duration"
        android:inputType="textPersonName"
        android:textColorHint="@color/dark_green"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_planeName" />

    <EditText
        android:id="@+id/et_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#00FFF266"
        android:ems="10"
        android:hint="Number of seats"
        android:inputType="textPersonName"
        android:textColorHint="@color/dark_green"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_duration" />

    <EditText
        android:id="@+id/et_seatPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#00FFF266"
        android:ems="10"
        android:hint="Seat price"
        android:inputType="textPersonName"
        android:textColorHint="@color/dark_green"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_seats" />

    <EditText
        android:id="@+id/et_destiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#00FFF266"
        android:ems="10"
        android:hint="Destiny"
        android:inputType="textPersonName"
        android:textColorHint="@color/dark_green"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_origin" />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="101dp"
        android:layout_height="68dp"
        android:background="@color/dark_green"
        android:onClick="changeToMainMenu"
        android:text="Go!"
        android:textColor="#FFFFFF"
        android:textColorHint="#9E9420"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_seatPrice"
        app:layout_constraintVertical_bias="0.21" />
</androidx.constraintlayout.widget.ConstraintLayout>